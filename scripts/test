#!/usr/bin/env bash
# Test runner script following Mitchell Hashimoto pattern

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running payment-ops-agent test suite...${NC}"

# Check if we're in the right directory
if [ ! -f "pyproject.toml" ]; then
    echo -e "${RED}Error: Must be run from project root${NC}"
    exit 1
fi

# Install dependencies if needed
echo -e "${YELLOW}Ensuring dependencies are installed...${NC}"
uv sync --dev

# Run tests
echo -e "${YELLOW}Running tests...${NC}"
uv run python -m pytest tests/ -v

# Run linting
echo -e "${YELLOW}Running linting...${NC}"
uv run python -m flake8 src/ tests/ --max-line-length=100 --ignore=E203,W503

# Check syntax (fast check on main source files)
echo -e "${YELLOW}Checking Python syntax...${NC}"
uv run python -m py_compile src/payment_ops/cli.py src/payment_ops/agent/*.py

echo -e "${GREEN}All tests passed!${NC}"